#include <iostream>
#include <cstdio>
using namespace std;

int main() {
  int numero_sapos;
  cin >> numero_sapos;

  for (int i = 0; i < numero_sapos; i++){
    long long int a = 0, b = 0, k = 0, metade = 0, final = 0;
    cin >> a >> b >> k;
    metade  = k/2;
    if (k % 2 != 0){
      cout << a*(metade + 1) - b*metade << endl;
    }
    else{
      cout << a*(metade) - b*metade << endl;
    }
  }
  return 0;
}
